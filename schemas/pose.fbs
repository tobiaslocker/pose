namespace Detection;

table Availability {
  visibility: float;
  presence: float;
}

table Landmark {
  x: float;
  y: float;
  z: float;
  availability: Availability;
}

table PoseDetectionResult {
  landmarks: [Landmark];
}

table Empty {}

union DetectionPayload {
  PoseDetectionResult,
  Empty
}

table DetectionMessage {
  payload: DetectionPayload;
}

root_type DetectionMessage;
