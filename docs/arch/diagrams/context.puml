@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

Person(user, "User", "Performs movements in front of a camera")

System_Ext(camera, "Camera", "Captures live video stream")
System(pose_server, "Pose Detection Server", "Processes video stream and detects pose landmarks")
System(visualization_client, "Visualization Client", "Receives pose data, visualizes it, and provides feedback")
System_Ext(predefined_sequences, "Predefined Motion Sequences", "Reference motion data used for matching")

user --> camera : "Performs movements"
camera --> pose_server : "Streams raw video (local or external)"
pose_server --> visualization_client : "Streams pose data (FlatBuffers over TCP, WebSocket planned)"
visualization_client --> predefined_sequences : "Loads reference motion sequences"
visualization_client --> user : "Displays visual feedback and performance"

@enduml
